<div class="wrapper">
  <div class="container list-posts">
    <%= render 'static/nav' %>
    <h1><span>Mes favoris</span></h1>
    <% if @posts.blank? %>
      <div class="text-center">
        <i class="fas fa-exclamation-circle fa-2x"></i>
        <i class="far fa-frown fa-2x"></i>
        <span> Vous n'avez pas sauvegard√© d'appels d'offres </span>
        <i class="far fa-frown fa-2x"></i>
        <i class="fas fa-exclamation-circle fa-2x"></i>
      </div>
    <% end %>
    <div class="cards">
      <% @posts.each do |post| %>
        <div class="card-ao">
          <div class="container-card">
            <p class="card-date"><%= post.deadline.strftime("%d/%m/%Y") %></p>
          <div class="card-favorite">
            <% unless current_user.favorite_posts.exists?(id: post.id) %>
              <%= link_to favorite_posts_path(post_id: post), method: :post do %>
                <i class="far fa-bookmark" style="color: #087AFE"></i>
              <% end %>
            <% else %>
              <%= link_to favorite_post_path(post), method: :delete do %>
                <i class="fas fa-bookmark" style="color: #087AFE"></i>
              <% end %>
            <% end %>
          </div>
            <h2 class="card-title"><%= post.client %></h2>
            <h2 class="card-title"><%= post.title %></h2>
            <% if post.rich_body.present? %>
              <p class="card-description"><%= truncate(strip_tags(post.rich_body.to_s), length:100) %></p>
            <% else %>
              <p class="card-description">Pas de description.</p>
            <% end %>
          </div>
          <% if post.photo.attached?  %>
            <%= link_to post.photo, download: '', class: "card-attachment " do %>
              <i class="fas fa-paperclip"></i>
            <% end %>
          <% end %>
          <div class="container-link">
            <%= link_to "Voir l'annonce", post_path(post), class: "card-link" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
