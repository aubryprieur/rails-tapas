<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col"><i class="fas fa-book-reader"></i><%= render 'reading' %></th>
      <th scope="col"><i class="fas fa-phone"></i><%= render 'call' %></th>
      <th scope="col"><i class="fas fa-pencil-alt"></i><%= render 'like' %></th>
      <th scope="col"><i class="fas fa-user-plus"></i><%= render 'team' %></th>
      <th scope="col"><i class="fas fa-times-circle"></i><%= render 'rejection' %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% if @post.readings.empty?  %>
        <td>#</td>
      <% else %>
        <td>
          <% @post.readings.each do |reading| %>
            <p><%= reading.user.first_name %></p>
          <% end %>
        </td>
      <% end %>
      <% if @post.calls.empty?  %>
        <td>#</td>
      <% else %>
        <td>
          <% @post.calls.each do |call| %>
            <p><%= call.user.first_name %></p>
          <% end %>
        </td>
      <% end %>
      <% if @post.likes.empty?  %>
        <td>#</td>
      <% else %>
        <td>
          <% @post.likes.each do |like| %>
            <p><%= like.user.first_name %></p>
          <% end %>
        </td>
      <% end %>
      <% if @post.teams.empty?  %>
        <td>#</td>
      <% else %>
        <td>
          <% @post.teams.each do |team| %>
            <p><%= team.user.first_name %></p>
          <% end %>
        </td>
      <% end %>
      <% if @post.rejections.empty?  %>
        <td>#</td>
      <% else %>
        <td>
          <% @post.rejections.each do |rejection| %>
            <p><%= rejection.user.first_name %></p>
          <% end %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>
