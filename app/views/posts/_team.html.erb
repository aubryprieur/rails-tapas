<% pre_team = @post.teams.find { |team| team.user_id == current_user.id} %>
<% if pre_team %>
  <%= button_to "Je ne rejoins plus l'équipe", post_team_path(@post, pre_team), method: :delete, class: "btn btn-outline-danger" %>
<% else %>
  <%= button_to "J'intègre l'équipe", post_teams_path(@post), method: :post, class: "btn btn-outline-primary" %>
<% end %>
