<% pre_team = @post.teams.find { |team| team.user_id == current_user.id} %>
<% if pre_team %>
  <%= link_to "J'intègre l'équipe (#{@post.teams.count})", post_team_path(@post, pre_team), method: :delete, class: "ranking-link" %>
<% else %>
  <%= link_to "J'intègre l'équipe", post_teams_path(@post), method: :post, class: "ranking-link" %>
<% end %>
