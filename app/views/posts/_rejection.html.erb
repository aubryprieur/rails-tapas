<% pre_rejection = @post.rejections.find { |rejection| rejection.user_id == current_user.id} %>
<% if pre_rejection %>
  <%= link_to "Pas pour moi (#{@post.rejections.count})", post_rejection_path(@post, pre_rejection), method: :delete, class: "" %>
<% else %>
  <%= link_to "Pas pour moi", post_rejections_path(@post), method: :post, class: "" %>
<% end %>
