<% pre_rejection = @post.rejections.find { |rejection| rejection.user_id == current_user.id} %>
<% if pre_rejection %>
  <%= button_to '`je change de statut', post_rejection_path(@post, pre_rejection), method: :delete, class: "btn btn-outline-danger" %>
<% else %>
  <%= button_to "Ce n'est pas pour moi", post_rejections_path(@post), method: :post, class: "btn btn-outline-primary" %>
<% end %>
