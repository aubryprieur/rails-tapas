<% pre_call = @post.calls.find { |call| call.user_id == current_user.id} %>
<% if pre_call %>
  <%= button_to "Je n'appelle plus", post_call_path(@post, pre_call), method: :delete, class: "btn btn-outline-danger" %>
<% else %>
  <%= button_to "J'appelle le client", post_calls_path(@post), method: :post, class: "btn btn-outline-primary" %>
<% end %>
