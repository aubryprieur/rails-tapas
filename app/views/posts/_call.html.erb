<% pre_call = @post.calls.find { |call| call.user_id == current_user.id} %>
<% if pre_call %>
  <%= link_to "J'appelle le client (#{@post.calls.count})", post_call_path(@post, pre_call), method: :delete, class: "ranking-link" %>
<% else %>
  <%= link_to "J'appelle le client", post_calls_path(@post), method: :post, class: "ranking-link" %>
<% end %>
