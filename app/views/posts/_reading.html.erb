<% pre_reading = @post.readings.find { |read| read.user_id == current_user.id} %>
<% if pre_reading %>
  <%= link_to "Je lis l'ao (#{@post.readings.count})", post_reading_path(@post, pre_reading), method: :delete, class: "" %>
<% else %>
  <%= link_to "Je lis l'ao", post_readings_path(@post), method: :post, class: "" %>
<% end %>
